<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>nocompiler</id>

  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>robovm-${project.version}</baseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/main/assembly/dist-common.xml</componentDescriptor>
  </componentDescriptors>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:*:jar:*</include>
      </includes>
      <excludes>
        <exclude>org.robovm:robovm-dist-compiler:jar:*</exclude>
      </excludes>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <fileMode>644</fileMode>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>*:*:*:sources</include>
        <include>org.robovm:robovm-objc:*:javadoc</include>
        <include>org.robovm:robovm-cocoatouch:*:javadoc</include>
      </includes>
      <excludes>
        <exclude>org.robovm:robovm-objc:*:sources</exclude>
        <exclude>org.robovm:robovm-cocoatouch:*:sources</exclude>
      </excludes>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.classifier}.${artifact.extension}</outputFileNameMapping>
      <fileMode>644</fileMode>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>
  </dependencySets>

</assembly>
